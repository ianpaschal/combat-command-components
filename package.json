{
  "name": "@ianpaschal/combat-command-components",
  "version": "1.1.0",
  "description": "A minimal React component library",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles/variables.css": "./dist/styles/variables.css",
    "./styles/reset.css": "./dist/styles/reset.css"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "postbuild": "mkdir -p dist/styles && cp src/style/variables.css dist/styles/ && cp src/style/reset.css dist/styles/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prelint": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:scss": "stylelint '**/*.scss'",
    "gen:scss": "typed-scss-modules src --nameFormat none"
  },
  "devDependencies": {
    "@storybook/react-vite": "^9.1.15",
    "@stylistic/eslint-plugin-js": "^2.13.0",
    "@stylistic/eslint-plugin-ts": "^2.13.0",
    "@stylistic/stylelint-config": "^3.0.1",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-newlines": "^1.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.93.2",
    "storybook": "^9.1.15",
    "stylelint": "^16.25.0",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "typed-scss-modules": "^5.0.0",
    "typescript": "^5.2.0",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "react-router-dom": "^7.9.4"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.4",
    "@fontsource/figtree": "^5.2.10",
    "@radix-ui/colors": "^3.0.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.548.0"
  }
}
